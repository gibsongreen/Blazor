@page "/ToDo"

<h1>To Do List (@todos.Count(todo => !todo.IsDone))</h1>
<!-- Sets up the to do list, with numerics that indicates how many tasks remain-->
<ul>
    @foreach (var todo in todos)
    {
    <!-- sets up to the todo list items for each individual item-->
        <li>
            <input type="checkbox" @bind="todo.IsDone" />
            <input @bind="todo.Title" />
        </li>
    }
</ul>

<input placeholder="Something todo" @bind="newTodo" />
<button @onclick="AddTodo">Add to List</button>

 <!-- function determines to add to the the list, and sets up for the next input-->
@code {
    private List<TodoItem> todos = new();
    private string newTodo;

    private void AddTodo()
    {
        if (!string.IsNullOrWhiteSpace(newTodo))
        {
            todos.Add(new TodoItem { Title = newTodo });
            newTodo = string.Empty;
        }
    }
}
